[Unit]
Description=OMOBUS zero service (e2o)
After=local-fs.target network.target

[Service]
#Type=forking
PIDFile=/var/run/omobus.d/omobus-e2o.pid
ExecStartPre=/bin/mkdir -m 0755 -p /var/run/omobus.d
ExecStartPre=/bin/chown omobus:omobus /var/run/omobus.d
ExecStart=/usr/local/sbin/omobusd e2o -x -u omobus -g omobus -p /var/run/omobus.d/omobus-e2o.pid
ExecStop=/bin/kill -s USR1 $MAINPID

[Install]
WantedBy=multi-user.target
